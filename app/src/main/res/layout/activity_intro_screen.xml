<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ScallopSeashell"
    tools:context=".ui.activities.IntroScreenActivity">


    <TextView
        android:id="@+id/SIGNUPBUTTON"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/different_login_shape"
        android:gravity="center_horizontal|center_vertical"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/ScallopSeashell"
        android:textSize="25sp"
        app:fontFamily="@font/alegreya_sans_extrabold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/Loginbutton"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textfielsinputshapes"
        android:gravity="center_horizontal|center_vertical"
        android:text="LOGIN"
        android:textColor="@color/BalticSeabgcolor"
        android:textSize="25sp"
        app:fontFamily="@font/alegreya_sans_extrabold"
        app:layout_constraintEnd_toEndOf="@+id/SIGNUPBUTTON"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/SIGNUPBUTTON"
        app:layout_constraintTop_toBottomOf="@+id/SIGNUPBUTTON" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Welcome To Mausam app"
        android:textColor="@color/BalticSeabgcolor"
        android:textSize="29sp"
        app:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.382"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="347dp"
        android:layout_height="326dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Loginbutton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/salad" />


</androidx.constraintlayout.widget.ConstraintLayout>