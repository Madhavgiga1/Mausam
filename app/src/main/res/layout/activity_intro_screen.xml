<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.IntroScreenActivity"
    android:background="@drawable/anotherbgfinal">

    <ImageView
        android:id="@+id/introscreenimage"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:scaleType="centerCrop"
        android:src="@drawable/introbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/handwriting_dude" />

    <TextView
        android:id="@+id/SIGNUPBUTTON"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/login_signup_rectangle"
        android:gravity="center_horizontal|center_vertical"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/ScallopSeashell"
        android:textSize="25sp"
        app:fontFamily="@font/anton"
        app:layout_constraintBottom_toBottomOf="@id/Loginbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/introscreenimage" />

    <TextView
        android:id="@+id/Loginbutton"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/different_login_shape"
        android:gravity="center_horizontal|center_vertical"
        android:text="LOGIN"
        android:textColor="@color/ScallopSeashell"
        android:textSize="25sp"
        app:fontFamily="@font/anton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SIGNUPBUTTON" />


</androidx.constraintlayout.widget.ConstraintLayout>